<!--
/**
 * @file DetalhesTicket.xaml
 * @brief Interface gráfica para exibição e atualização dos detalhes de um ticket.
 * 
 * Esta janela apresenta informações gerais, estado do atendimento e informações técnicas
 * de um ticket específico no sistema de gestão.
 *
 * @author Paulo
 * 
 */
-->
<Window x:Class="UI.DetalhesTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Ticket"
        Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9"
        FontFamily="Segoe UI"
        FontSize="14"
        KeyboardNavigation.TabNavigation="Cycle">
    <!--
    /**
     * @brief Recursos e estilos reutilizáveis definidos para a janela.
     */
    -->
    <Window.Resources>
        <!--
        /**
         * @brief Estilo para GroupBox com bordas suaves e cabeçalho personalizado.
         */
        -->
        <Style TargetType="GroupBox">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}"/>
                            <ContentPresenter Margin="10,25,10,10" />
                            <TextBlock Text="{TemplateBinding Header}" 
                                       FontWeight="Bold" 
                                       Foreground="#007ACC"
                                       Background="{TemplateBinding Background}" 
                                       Padding="4,0"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top"
                                       FontSize="16"
                                       Margin="10,-10,0,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--
        /**
         * @brief Estilo para rótulos (TextBlock) em negrito.
         */
        -->
        <Style x:Key="LabelTextBlock" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!--
        /**
         * @brief Estilo para valores apresentados (TextBlock) com texto leve e quebra automática.
         */
        -->
        <Style x:Key="ValueTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>


        <!--
        /**
         * @brief Estilo para botões com foco em acessibilidade e usabilidade.
         */
        -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A6A6A6"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="#FFB900"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <!--
    /**
     * @brief Estrutura principal com rolagem que contém todas as seções da janela.
     */
    -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" Focusable="True">
        <StackPanel>
            <!--
            /**
             * @brief Título da janela exibido no topo da tela.
             */
            -->
            <TextBlock Text="Detalhes do Ticket" 
                       FontWeight="Bold" 
                       FontSize="24" 
                       Foreground="#2c3e50"
                       Margin="0,0,0,30" 
                       HorizontalAlignment="Center"
                       AutomationProperties.Name="Título da página"/>
            <!--
            /**
             * @brief Seção que apresenta informações gerais do ticket.
             */
            -->
            <GroupBox Header="Informações Gerais" Margin="0,0,0,15" Height="287">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ID:" Style="{StaticResource LabelTextBlock}" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding Id}" Style="{StaticResource ValueTextBlock}" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Tipo:" Style="{StaticResource LabelTextBlock}" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding Tipo}" Style="{StaticResource ValueTextBlock}" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Subtipo do Problema:" Style="{StaticResource LabelTextBlock}" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding SubtipoProblema}" Style="{StaticResource ValueTextBlock}" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Prioridade:" Style="{StaticResource LabelTextBlock}" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding Prioridade}" Style="{StaticResource ValueTextBlock}" Grid.Row="3" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Estado do Ticket:" Style="{StaticResource LabelTextBlock}" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding EstadoTicket}" Style="{StaticResource ValueTextBlock}" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Criado em:" Style="{StaticResource LabelTextBlock}" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding DataCriacao, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Style="{StaticResource ValueTextBlock}" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Data de Atendimento:" Style="{StaticResource LabelTextBlock}" Grid.Row="6" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding DataAtendimento, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Style="{StaticResource ValueTextBlock}" Grid.Row="6" Grid.Column="1" Margin="0,5"/>

                    <TextBlock Text="Data de Conclusão:" Style="{StaticResource LabelTextBlock}" Grid.Row="7" Grid.Column="0" Margin="0,5"/>
                    <TextBlock Text="{Binding DataConclusao, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Style="{StaticResource ValueTextBlock}" Grid.Row="7" Grid.Column="1" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!--
            /**
             * @brief Seção para definir o estado de atendimento do ticket.
             */
            -->
            <GroupBox Header="Estado do Atendimento" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <TextBlock Text="Problema Resolvido:" Style="{StaticResource LabelTextBlock}" />
                    <ComboBox x:Name="cmbEstadoAtendimento" Width="150" Margin="0,5,0,0"
                              ToolTip="Selecione se o problema foi resolvido"
                              KeyboardNavigation.TabIndex="0"
                              AutomationProperties.Name="Estado do Atendimento">
                        <ComboBoxItem Content="Sim" />
                        <ComboBoxItem Content="Não" />
                    </ComboBox>
                    <Button Content="Salvar" Width="100" Margin="0,15,0,0" Click="Salvar_Click" HorizontalAlignment="Left"
                            ToolTip="Clique para salvar o estado do atendimento"
                            KeyboardNavigation.TabIndex="1"/>
                </StackPanel>
            </GroupBox>
            <!--
            /**
             * @brief Seção que exibe informações técnicas relacionadas ao ticket.
             */
            -->
            <GroupBox Header="Informações Técnicas" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ID do Utilizador:" Style="{StaticResource LabelTextBlock}" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding IdUtilizador}" Style="{StaticResource ValueTextBlock}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Nome do Funcionário:" Style="{StaticResource LabelTextBlock}" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding NomeFuncionario}" Style="{StaticResource ValueTextBlock}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Resposta Técnica:" Style="{StaticResource LabelTextBlock}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding DetalhesTecnico}" Style="{StaticResource ValueTextBlock}" Grid.Row="2" Grid.Column="1"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>

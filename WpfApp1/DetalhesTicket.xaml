<Window x:Class="UI.DetalhesTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Ticket" Height="600" Width="500" WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>

            <TextBlock Text="Detalhes do Ticket" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Foreground="#2c3e50"
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

            <GroupBox Header="Informações Gerais" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ID:" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding Id}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Tipo:" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding Tipo}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Subtipo do Problema:" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="{Binding SubtipoProblema}" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Prioridade:" FontWeight="Bold" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Text="{Binding Prioridade}" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="Estado do Ticket:" FontWeight="Bold" Grid.Row="4" Grid.Column="0"/>
                    <TextBlock Text="{Binding EstadoTicket}" Grid.Row="4" Grid.Column="1"/>

                    <TextBlock Text="Criado em:" FontWeight="Bold" Grid.Row="5" Grid.Column="0"/>
                    <TextBlock Text="{Binding DataCriacao, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Grid.Row="5" Grid.Column="1"/>

                    <TextBlock Text="Data de Atendimento:" FontWeight="Bold" Grid.Row="6" Grid.Column="0"/>
                    <TextBlock Text="{Binding DataAtendimento, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Grid.Row="6" Grid.Column="1"/>

                    <TextBlock Text="Data de Conclusão:" FontWeight="Bold" Grid.Row="7" Grid.Column="0"/>
                    <TextBlock Text="{Binding DataConclusao, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Grid.Row="7" Grid.Column="1"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Estado do Atendimento" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <TextBlock Text="Problema Resolvido:" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbEstadoAtendimento" Width="150" Margin="0,5,0,0">
                        <ComboBoxItem Content="Sim" />
                        <ComboBoxItem Content="Não" />
                    </ComboBox>
                    <Button Content="Salvar" Width="100" Margin="0,10,0,0" Click="Salvar_Click" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Informações Técnicas" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ID do Utilizador:" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding IdUtilizador}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Nome do Funcionário:" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding NomeFuncionario}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Resposta Técnica:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding DetalhesTecnico}" TextWrapping="Wrap" Grid.Row="2" Grid.Column="1"/>

                   
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>


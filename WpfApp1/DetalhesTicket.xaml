<Window x:Class="UI.DetalhesTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Ticket" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f2f2f2">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>

            <TextBlock Text="Detalhes do Ticket"
                       FontWeight="Bold"
                       FontSize="22"
                       Foreground="#274360"
                       Margin="0,0,0,25"
                       HorizontalAlignment="Center"/>

            <!-- Informações Gerais -->
            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#ccc" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Informações Gerais" FontWeight="Bold" FontSize="16" Foreground="#2c3e50" Margin="0,0,0,10"/>
                    <UniformGrid Columns="2" Rows="8" Margin="0,0,0,10">
                        <TextBlock Text="ID:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Id}"/>

                        <TextBlock Text="Tipo:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Tipo}"/>

                        <TextBlock Text="Subtipo do Problema:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SubtipoProblema}"/>

                        <TextBlock Text="Prioridade:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Prioridade}"/>

                        <TextBlock Text="Estado do Ticket:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding EstadoTicket}"/>

                        <TextBlock Text="Criado em:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DataCriacao, StringFormat={}{0:dd/MM/yyyy HH:mm}}"/>

                        <TextBlock Text="Data de Atendimento:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DataAtendimento, StringFormat={}{0:dd/MM/yyyy HH:mm}}"/>

                        <TextBlock Text="Data de Conclusão:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DataConclusao, StringFormat={}{0:dd/MM/yyyy HH:mm}}"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Estado Atendimento -->
            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#ccc" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Estado do Atendimento" FontWeight="Bold" FontSize="16" Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <TextBlock Text="Problema Resolvido:" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbEstadoAtendimento"
                              Height="30"
                              Width="150"
                              Background="White"
                              BorderBrush="#ccc"
                              Margin="0,5,0,0">
                        <ComboBoxItem Content="Sim"/>
                        <ComboBoxItem Content="Não"/>
                    </ComboBox>

                    <Button Content="Salvar"
                            Width="100"
                            Margin="0,15,0,0"
                            Click="Salvar_Click"
                            Background="#274360"
                            Foreground="White"
                            BorderBrush="#274360"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Informações Técnicas -->
            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#ccc" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Informações Técnicas" FontWeight="Bold" FontSize="16" Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <UniformGrid Columns="2" Rows="3" Margin="0,0,0,10">
                        <TextBlock Text="ID do Utilizador:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding IdUtilizador}"/>

                        <TextBlock Text="Nome do Funcionário:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NomeFuncionario}"/>
                    </UniformGrid>

                    <TextBlock Text="Resposta Técnica:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding DetalhesTecnico}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>

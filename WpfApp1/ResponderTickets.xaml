<Window x:Class="UI.Views.ResponderTickets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UI.ViewModels"
        Title="Responder Tickets" Height="500" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <ComboBox Width="120" Margin="0 10 10 0"
                          SelectedItem="{Binding FiltroTipo, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <sys:String>Todos</sys:String>
                            <sys:String>Hardware</sys:String>
                            <sys:String>Software</sys:String>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>

                <ComboBox Width="120" Margin="0 0 10 0"
                          SelectedItem="{Binding FiltroPrioridade, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <sys:String>Todos</sys:String>
                            <sys:String>Baixa</sys:String>
                            <sys:String>Média</sys:String>
                            <sys:String>Alta</sys:String>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>

                
            </StackPanel>

            <!-- Lista de Tickets -->
            <DataGrid ItemsSource="{Binding Tickets}" AutoGenerateColumns="False" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                    <DataGridTextColumn Header="Prioridade" Binding="{Binding Prioridade}" Width="100"/>
                    <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="200"/>
                    <DataGridTextColumn Header="Data" Binding="{Binding DataCriacao}" Width="120"/>
                    <DataGridTextColumn Header="Funcionário" Binding="{Binding NomeFuncionario}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Login" Height="200" Width="300" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="txtCredenciaisExemplo" 
               Margin="0,10,0,0" 
               Foreground="Gray" 
               TextWrapping="Wrap" 
               FontSize="12"/>
            <Grid>
                <TextBox x:Name="txtUsername" Height="25" VerticalContentAlignment="Center" />
                <TextBlock Text="Username" Foreground="Gray" Margin="5,0,0,0" 
                           IsHitTestVisible="False" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtUsername}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=txtUsername}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <PasswordBox x:Name="txtPassword" Margin="0,10,0,10" Height="25" />
            <Button Content="Entrar" Height="30" Click="BtnEntrar_Click"/>
        </StackPanel>
    </Grid>
</Window>

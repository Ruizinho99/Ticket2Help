<!--
/**
 * @file LoginWindow.xaml
 * @brief Janela de login do sistema.
 * 
 * Esta interface permite ao usuário inserir nome de usuário e senha para acessar o sistema.
 * Inclui validação visual, acessibilidade, e estilos personalizados para campos de texto, senhas e botões.
 *
 * @author Paulo
 *  
 */
-->
<Window x:Class="UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="400" WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        FontFamily="Segoe UI" FontSize="14"
        KeyboardNavigation.TabNavigation="Cycle">
    <!--
    /**
     * @brief Definição dos estilos reutilizáveis para botões, caixas de texto, caixas de senha e labels.
     */
    -->
    <Window.Resources>
        <!--
        /**
         * @brief Estilo de botão azul com hover e estado desabilitado.
         */
        -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A6A6A6"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--
        /**
         * @brief Estilo para campos de entrada de texto com foco visual.
         */
        -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#EEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--
        /**
         * @brief Estilo para campos de senha com foco visual.
         */
        -->
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#EEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!--
        /**
         * @brief Estilo para rótulos (Label) com margem e negrito.
         */
        -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
    </Window.Resources>
    <!--
    /**
     * @brief Layout principal da janela de login.
     */
    -->
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
            <!--
            /**
             * @brief Texto de instrução para o usuário sobre o preenchimento das credenciais.
             */
            -->
            <TextBlock x:Name="txtCredenciaisExemplo" 
                       Margin="0,0,0,15" 
                       Foreground="Gray" 
                       TextWrapping="Wrap" 
                       FontSize="12"
                       Text="Use seu nome de usuário e senha para entrar."/>
            <!--
            /**
             * @brief Rótulo do campo Username.
             */
            -->
            <Label Content="Username" Target="{Binding ElementName=txtUsername}"/>
            <!--
            /**
             * @brief Campo de entrada para o nome de usuário.
             */
            -->
            <TextBox x:Name="txtUsername"
                     KeyboardNavigation.TabIndex="0"
                     ToolTip="Digite seu nome de usuário"
                     />
            <!--
            /**
             * @brief Rótulo do campo Password.
             */
            -->
            <Label Content="Password" Target="{Binding ElementName=txtPassword}"/>
            <!--
            /**
             * @brief Campo de entrada para a senha do usuário.
             */
            -->
            <PasswordBox x:Name="txtPassword"
                         Margin="0,0,0,20"
                         KeyboardNavigation.TabIndex="1"
                         ToolTip="Digite sua senha"
                         />
            <!--
            /**
             * @brief Botão de login que dispara a validação e entrada no sistema.
             * @details Aplica o estilo BlueButtonStyle e executa o método BtnEntrar_Click no evento Click.
             */
            -->
            <Button Content="Entrar"
                    Height="40"
                    KeyboardNavigation.TabIndex="2"
                    ToolTip="Clique para efetuar login"
                    Style="{StaticResource BlueButtonStyle}"
                    Click="BtnEntrar_Click"/>
        </StackPanel>
    </Border>
</Window>

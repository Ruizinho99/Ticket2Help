<Window x:Class="UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Login" Height="600" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="txtCredenciaisExemplo" 
               Margin="0,10,0,0" 
               Foreground="Gray" 
               TextWrapping="Wrap" 
               FontSize="12"/>
            <Label Content="Username"/>
            <Grid>
                <TextBox x:Name="txtUsername" Height="25" VerticalContentAlignment="Center"/>
            </Grid>
            <Label Content="Password"/>

            <PasswordBox x:Name="txtPassword" Margin="0,10,0,10" Height="25" />
            <Button Content="Entrar" Height="30" Click="BtnEntrar_Click"/>
        </StackPanel>
    </Grid>
</Window>

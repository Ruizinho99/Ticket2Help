<Window x:Class="UI.Views.ResponderTicketDetalhes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Responder Ticket"
        Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#f2f2f2">

    <Border Background="White" CornerRadius="10" Padding="20" Margin="10" BorderBrush="#ccc" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Responder ao Ticket"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#274360"
                       Margin="0 0 0 20"/>

            <!-- Estado do Ticket -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 15">
                <TextBlock Text="Estado do Ticket:" VerticalAlignment="Center" FontWeight="Bold" Margin="0 0 10 0"/>
                <ComboBox x:Name="cmbEstadoTicket"
                          Width="200"
                          Height="20"
                          Background="White"
                          BorderBrush="#ccc"
                          BorderThickness="1"
                          SelectedIndex="0">
                    <ComboBoxItem Content="porAtender"/>
                    <ComboBoxItem Content="emAtendimento"/>
                    <ComboBoxItem Content="atendido"/>
                </ComboBox>
            </StackPanel>

            <!-- Resposta Técnica -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Resposta Técnica:" FontWeight="Bold" Margin="0 0 0 5"/>
                <TextBox x:Name="txtResposta"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         Height="140"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         Background="#fcfcfc"
                         Padding="8"/>
            </StackPanel>

            <!-- Botões -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Guardar"
                        Width="90"
                        Margin="5,0"
                        Click="Guardar_Click"
                        Background="#274360"
                        Foreground="White"
                        BorderBrush="#274360"/>
                <Button Content="Cancelar"
                        Width="90"
                        Margin="5,0"
                        Click="Cancelar_Click"
                        Background="#d9534f"
                        Foreground="White"
                        BorderBrush="#d9534f"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

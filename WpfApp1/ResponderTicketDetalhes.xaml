<Window x:Class="UI.Views.ResponderTicketDetalhes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Responder Ticket" Height="350" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Responder ao Ticket" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

        <!-- Campo de Resposta -->
        <TextBox Grid.Row="1" x:Name="txtResposta" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 Height="150" Margin="0 10 0 10" />


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Width="80" Margin="5" Click="Guardar_Click"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>

